services:
  server:
    extra_hosts:
      - "host.docker.internal:host-gateway"
  postgres:
    container_name: ${SERVICE_NAME}.postgres
    image: postgres:16
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=postgres
  adminer:
    image: adminer
    container_name: ${SERVICE_NAME}.adminer
    ports:
      - "8080:8080"